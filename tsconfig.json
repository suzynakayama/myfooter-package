{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "es6",
		"module": "commonjs",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"removeComments": true,
		"declaration": true,
		"sourceMap": true,
		"jsx": "preserve",
		"typeRoots": ["index.d.ts", "node_modules/@types"]
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts"],
	"exclude": ["node_modules"]
}
